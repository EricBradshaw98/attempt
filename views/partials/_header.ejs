<link rel="stylesheet" href="/views_css/_header.css" />

<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">Lighthouse Restaurant</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls"></a>
        <a class="nav-item nav-link" href="/urls/new"></a>
      </div>
      <div class="ml-auto">

        <% if (user.id) { %>

          <div class="form-inline" style="color: white; margin-right: 1em;">
            Logged in as: <%= user.name %>!
            <form class="ml-2" action="/logout" method="POST">
              <button type="submit" class="btn btn-danger">Logout</button>
            </form>
          </div>
        <% } else {%>
        </div>

          <form class="form-inline" action="/redirectregister" method="POST">
            <button type="submit" class="btn btn-primary">Register</button>
          </form>
          &nbsp;
          <form class="form-inline" action="/redirectlogin" method="POST">
            <button type="submit" class="btn btn-primary">Login</button>
          </form>
        <% } %>
      </div>
    </div>
  </nav>
</header>
